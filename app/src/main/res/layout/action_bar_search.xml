<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/action_bar_background_with_border"
    android:layout_width="match_parent"
    android:layout_height="56dp" >

    <ImageButton
        android:id="@+id/go_back"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@mipmap/ic_arrow_left_black"
        android:background="@null"
        android:contentDescription="@string/title_search_cancel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <EditText
        android:id="@+id/search_text"
        android:layout_height="36dp"
        android:layout_width="0dp"
        android:background="@color/white_eight"
        android:imeOptions="actionDone"
        android:singleLine="true"
        android:inputType="text"
        android:hint="@string/title_search_hint_stock"
        android:textColorHint="@color/text_second"
        android:layout_marginStart="16dp"
        android:textSize="16sp"
        android:letterSpacing="0.04"
        android:fontFamily="sans-serif"
        android:textStyle="normal"
        android:textColor="@color/text_black"
        android:focusable="true"
        android:focusableInTouchMode="true"
        app:layout_constraintStart_toEndOf="@id/go_back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</android.support.constraint.ConstraintLayout>