<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <android.support.constraint.Guideline
        android:id="@+id/guideline_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.517"/>

    <android.support.constraint.Guideline
        android:id="@+id/guideline_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.87"/>

    <View
        android:id="@+id/highlight_red_vertical_bar"
        android:layout_width="4dp"
        android:layout_height="14dp"
        android:background="@drawable/title_left_part_vertical_line"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="@id/ranking_title"
        app:layout_constraintBottom_toBottomOf="@id/ranking_title"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/ranking_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:fontFamily="sans-serif-medium"
        android:text="@string/main_page_news_ranking"
        android:layout_marginStart="12dp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/highlight_red_vertical_bar" />

    <TextView
        android:id="@+id/company_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:textColor="@color/text_gray"
        android:textSize="12sp"
        android:fontFamily="sans-serif"
        android:text="@string/main_stock_name"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/ranking_title"
        app:layout_constraintStart_toStartOf="@id/highlight_red_vertical_bar" />

    <TextView
        android:id="@+id/price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:textColor="@color/text_gray"
        android:textSize="12sp"
        android:fontFamily="sans-serif"
        android:text="@string/main_stock_price"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/ranking_title"
        app:layout_constraintStart_toStartOf="@id/guideline_1" />

    <TextView
        android:id="@+id/prediction"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:textColor="@color/text_gray"
        android:textSize="12sp"
        android:fontFamily="sans-serif"
        android:text="@string/main_stock_prediction"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/ranking_title"
        app:layout_constraintStart_toStartOf="@id/guideline_2" />

    <ProgressBar
        android:id="@+id/loading_progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/company_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/stock_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/company_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</android.support.constraint.ConstraintLayout>