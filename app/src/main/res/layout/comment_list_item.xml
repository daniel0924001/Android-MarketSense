<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="1dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/news_layout_border">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/comment_avatar_image_iv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:adjustViewBounds="true"
        fresco:actualImageScaleType="centerCrop"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        fresco:roundAsCircle="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/comment_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:textColor="@color/marketsense_text_black"
        android:textSize="18sp"
        android:fontFamily="Roboto-Regular"
        android:textStyle="bold"
        android:text="@string/title_comment_user_name"
        android:lineSpacingExtra="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/comment_avatar_image_iv" />

    <TextView
        android:id="@+id/comment_create_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:textColor="@color/marketsense_text_gray"
        android:textSize="14sp"
        android:fontFamily="Roboto-Regular"
        android:text="@string/title_comment_create_time"
        android:lineSpacingExtra="4dp"
        app:layout_constraintTop_toBottomOf="@id/comment_user_name"
        app:layout_constraintStart_toEndOf="@id/comment_avatar_image_iv" />

    <com.idroi.marketsense.NewsWebView
        android:id="@+id/comment_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/comment_avatar_image_iv"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        />

    <TextView
        android:id="@+id/tv_like_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_good_number"
        android:textColor="@color/text_black"
        android:textSize="14sp"
        android:fontFamily="Roboto-Regular"
        android:textStyle="normal"
        android:layout_marginTop="15dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@id/comment_body"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_reply_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_reply_number"
        android:textColor="@color/text_black"
        android:textSize="14sp"
        android:fontFamily="Roboto-Regular"
        android:textStyle="normal"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@id/comment_body"
        app:layout_constraintEnd_toEndOf="parent" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/social_function_block"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/text_light_gray"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_like_number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tv_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="5dp"
            android:drawableStart="@drawable/ic_comment_theme_color_24px"
            android:text="@string/title_good"
            android:textColor="@color/text_black"
            android:textSize="18sp"
            android:fontFamily="Roboto-Regular"
            android:textStyle="normal"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="35dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tv_reply"/>

        <TextView
            android:id="@+id/tv_reply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="5dp"
            android:drawableStart="@drawable/ic_comment_theme_color_24px"
            android:text="@string/title_reply"
            android:textColor="@color/text_black"
            android:textSize="18sp"
            android:fontFamily="Roboto-Regular"
            android:textStyle="normal"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>