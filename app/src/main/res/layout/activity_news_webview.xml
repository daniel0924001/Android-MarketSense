<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.idroi.marketsense.NewsWebViewActivity">

    <ScrollView
        android:id="@+id/marketsense_webview_middle_sv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="44dp"
        tools:layout_editor_absoluteY="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <android.support.constraint.ConstraintLayout
                android:id="@+id/marketsense_webview_upper_block"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/marketsense_webview_activity_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:adjustViewBounds="true"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    fresco:actualImageScaleType="centerCrop" />

                <FrameLayout
                    android:id="@+id/marketsense_webview_activity_image_mask"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/marketsense_trans_black"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintDimensionRatio="H,4:3"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/marketsense_webview_activity_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="40dp"
                    android:layout_marginStart="40dp"
                    android:fontFamily="Roboto-Regular"
                    android:gravity="center"
                    android:textColor="@color/marketsense_text_white"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/marketsense_webview_activity_source_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:fontFamily="Roboto-Regular"
                    android:gravity="center"
                    android:textColor="@color/marketsense_text_white"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/marketsense_webview_activity_title" />
            </android.support.constraint.ConstraintLayout>


            <android.support.constraint.ConstraintLayout
                android:id="@+id/marketsense_webview_lower_block"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/marketsense_webview_upper_block">

                <com.idroi.marketsense.NewsWebView xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/news_webview_middle"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0" />

                <Button
                    android:id="@+id/btn_convert_webview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp"
                    android:background="@drawable/btn_oval"
                    android:text="@string/title_news_read_original"
                    android:textColor="@color/marketsense_text_white"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/btn_say_good"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/btn_say_good"
                    app:layout_constraintStart_toStartOf="parent" />

                <Button
                    android:id="@+id/btn_say_good"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginBottom="30dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/btn_round_red"
                    android:drawableTop="@drawable/ic_trending_up_white_24px"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:text="@string/title_vote"
                    android:textColor="@color/marketsense_text_white"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/btn_say_bad"
                    app:layout_constraintRight_toLeftOf="@id/btn_say_bad" />

                <Button
                    android:id="@+id/btn_say_bad"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginBottom="30dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/btn_round_green"
                    android:drawableTop="@drawable/ic_trending_down_white_24px"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:text="@string/title_vote"
                    android:textColor="@color/marketsense_text_white"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/btn_say_comment"
                    app:layout_constraintRight_toLeftOf="@id/btn_say_comment" />

                <Button
                    android:id="@+id/btn_say_comment"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginBottom="30dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/btn_round_red"
                    android:drawableTop="@drawable/ic_comment_white_24px"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:text="@string/title_comment"
                    android:textColor="@color/marketsense_text_white"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintRight_toRightOf="parent" />
            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                android:id="@+id/marketsense_webview_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/marketsense_webview_lower_block">

                <include
                    android:id="@+id/comment_title"
                    layout="@layout/block_title" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/marketsense_webview_comment_rv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/comment_title" />

                <ImageView
                    android:id="@+id/marketsense_webview_no_comment_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="47dp"
                    android:contentDescription="@string/title_no_comment"
                    android:src="@mipmap/ic_nocomment"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/comment_title" />

                <TextView
                    android:id="@+id/marketsense_webview_no_comment_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:fontFamily="Roboto-Regular"
                    android:gravity="center"
                    android:text="@string/title_no_comment"
                    android:textColor="@color/marketsense_text_gray"
                    android:textSize="20sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/marketsense_webview_no_comment_iv" />

                <Button
                    android:id="@+id/btn_send_first"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="40dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/btn_oval"
                    android:text="@string/title_send_first"
                    android:textColor="@color/marketsense_text_white"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/marketsense_webview_no_comment_tv" />

            </android.support.constraint.ConstraintLayout>

        </android.support.constraint.ConstraintLayout>
    </ScrollView>

    <com.idroi.marketsense.NewsWebView  xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/news_webview_original"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone"/>

    <Button
        android:id="@+id/btn_convert_webview_original"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:background="@drawable/btn_oval"
        android:text="@string/title_news_read_middle"
        android:textColor="@color/marketsense_text_white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_say_good_original"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/btn_say_good_original"
        app:layout_constraintStart_toStartOf="parent"
        android:visibility="gone" />

    <Button
        android:id="@+id/btn_say_good_original"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="30dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/btn_round_red"
        android:drawableTop="@drawable/ic_trending_up_white_24px"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:text="@string/title_vote"
        android:textColor="@color/marketsense_text_white"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_say_bad_original"
        app:layout_constraintRight_toLeftOf="@id/btn_say_bad_original"
        android:visibility="gone" />

    <Button
        android:id="@+id/btn_say_bad_original"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="30dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/btn_round_green"
        android:drawableTop="@drawable/ic_trending_down_white_24px"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:text="@string/title_vote"
        android:textColor="@color/marketsense_text_white"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_say_comment_original"
        app:layout_constraintRight_toLeftOf="@id/btn_say_comment_original"
        android:visibility="gone" />

    <Button
        android:id="@+id/btn_say_comment_original"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="30dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/btn_round_red"
        android:drawableTop="@drawable/ic_comment_white_24px"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:text="@string/title_comment"
        android:textColor="@color/marketsense_text_white"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:visibility="gone" />

</android.support.constraint.ConstraintLayout>