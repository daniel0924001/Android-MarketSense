<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="16dp"
    android:paddingEnd="16dp">
    
    <android.support.constraint.ConstraintLayout
        android:id="@+id/top_1_1_block"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/ice_blue"
        android:layout_marginEnd="3dp"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/top_1_2_block">

        <TextView
            android:id="@+id/top_1_1_const"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_second"
            android:textSize="12sp"
            android:fontFamily="sans-serif"
            android:text="@string/title_stock_price_open"
            android:layout_marginTop="9dp"
            android:layout_marginStart="12dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/top_1_1_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_first"
            android:textSize="14sp"
            android:fontFamily="sans-serif"
            android:text="@string/title_stock_price_open"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="11dp"
            app:layout_constraintTop_toBottomOf="@id/top_1_1_const"
            app:layout_constraintStart_toStartOf="@id/top_1_1_const"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/top_1_2_block"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/ice_blue"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="2dp"
        app:layout_constraintStart_toEndOf="@id/top_1_1_block"
        app:layout_constraintEnd_toStartOf="@id/top_1_3_block">

        <TextView
            android:id="@+id/top_1_2_const"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_second"
            android:textSize="12sp"
            android:fontFamily="sans-serif"
            android:text="@string/title_stock_price_yesterday_close"
            android:layout_marginTop="9dp"
            android:layout_marginStart="12dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/top_1_2_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_first"
            android:textSize="14sp"
            android:fontFamily="sans-serif"
            android:text="@string/title_stock_price_yesterday_close"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="11dp"
            app:layout_constraintTop_toBottomOf="@id/top_1_2_const"
            app:layout_constraintStart_toStartOf="@id/top_1_2_const"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/top_1_3_block"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/ice_blue"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="1dp"
        app:layout_constraintStart_toEndOf="@id/top_1_2_block"
        app:layout_constraintEnd_toStartOf="@id/top_1_4_block">

        <TextView
            android:id="@+id/top_1_3_const"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_second"
            android:textSize="12sp"
            android:fontFamily="sans-serif"
            android:text="@string/title_stock_price_high"
            android:layout_marginTop="9dp"
            android:layout_marginStart="12dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/top_1_3_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_first"
            android:textSize="14sp"
            android:fontFamily="sans-serif"
            android:text="@string/title_stock_price_high"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="11dp"
            app:layout_constraintTop_toBottomOf="@id/top_1_3_const"
            app:layout_constraintStart_toStartOf="@id/top_1_3_const"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/top_1_4_block"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/ice_blue"
        android:layout_marginStart="3dp"
        app:layout_constraintStart_toEndOf="@id/top_1_3_block"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/top_1_4_const"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_second"
            android:textSize="12sp"
            android:fontFamily="sans-serif"
            android:text="@string/title_stock_price_low"
            android:layout_marginTop="9dp"
            android:layout_marginStart="12dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/top_1_4_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_first"
            android:textSize="14sp"
            android:fontFamily="sans-serif"
            android:text="@string/title_stock_price_low"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="11dp"
            app:layout_constraintTop_toBottomOf="@id/top_1_4_const"
            app:layout_constraintStart_toStartOf="@id/top_1_4_const"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/top_2_1_block"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/ice_blue"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="3dp"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintTop_toBottomOf="@id/top_1_1_block"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/top_2_2_block">

        <TextView
            android:id="@+id/top_2_1_const"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_second"
            android:textSize="12sp"
            android:fontFamily="sans-serif"
            android:text="@string/title_stock_price_buy"
            android:layout_marginTop="9dp"
            android:layout_marginStart="12dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/top_2_1_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_first"
            android:textSize="14sp"
            android:fontFamily="sans-serif"
            android:text="@string/title_stock_price_buy"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="11dp"
            app:layout_constraintTop_toBottomOf="@id/top_2_1_const"
            app:layout_constraintStart_toStartOf="@id/top_2_1_const"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/top_2_2_block"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/ice_blue"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="2dp"
        app:layout_constraintTop_toTopOf="@id/top_2_1_block"
        app:layout_constraintStart_toEndOf="@id/top_2_1_block"
        app:layout_constraintEnd_toStartOf="@id/top_2_3_block">

        <TextView
            android:id="@+id/top_2_2_const"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_second"
            android:textSize="12sp"
            android:fontFamily="sans-serif"
            android:text="@string/title_stock_price_sell"
            android:layout_marginTop="9dp"
            android:layout_marginStart="12dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/top_2_2_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_first"
            android:textSize="14sp"
            android:fontFamily="sans-serif"
            android:text="@string/title_stock_price_sell"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="11dp"
            app:layout_constraintTop_toBottomOf="@id/top_2_2_const"
            app:layout_constraintStart_toStartOf="@id/top_2_2_const"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/top_2_3_block"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/ice_blue"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="1dp"
        app:layout_constraintTop_toTopOf="@id/top_2_1_block"
        app:layout_constraintStart_toEndOf="@id/top_2_2_block"
        app:layout_constraintEnd_toStartOf="@id/top_2_4_block">

        <TextView
            android:id="@+id/top_2_3_const"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_second"
            android:textSize="12sp"
            android:fontFamily="sans-serif"
            android:text="@string/title_stock_money"
            android:layout_marginTop="9dp"
            android:layout_marginStart="12dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/top_2_3_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_first"
            android:textSize="14sp"
            android:fontFamily="sans-serif"
            android:text="@string/title_stock_money"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="11dp"
            app:layout_constraintTop_toBottomOf="@id/top_2_3_const"
            app:layout_constraintStart_toStartOf="@id/top_2_3_const"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/top_2_4_block"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/ice_blue"
        android:layout_marginStart="3dp"
        app:layout_constraintTop_toTopOf="@id/top_2_1_block"
        app:layout_constraintStart_toEndOf="@id/top_2_3_block"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/top_2_4_const"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_second"
            android:textSize="12sp"
            android:fontFamily="sans-serif"
            android:text="@string/title_stock_volume_yesterday"
            android:layout_marginTop="9dp"
            android:layout_marginStart="12dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/top_2_4_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_first"
            android:textSize="14sp"
            android:fontFamily="sans-serif"
            android:text="@string/title_stock_volume_yesterday"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="11dp"
            app:layout_constraintTop_toBottomOf="@id/top_2_4_const"
            app:layout_constraintStart_toStartOf="@id/top_2_4_const"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.Group
        android:id="@+id/second_row_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="top_2_1_block,top_2_2_block,top_2_3_block,top_2_4_block " />

</android.support.constraint.ConstraintLayout>