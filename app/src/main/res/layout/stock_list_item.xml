<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="1dp"
    android:id="@+id/marketsense_stock_item_id"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@drawable/news_layout_border">

    <ImageView
        android:id="@+id/marketsense_stock_trend_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="15dp"
        android:contentDescription="@string/iv_up_down"
        app:srcCompat="@drawable/ic_trending_up_red_24px"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/marketsense_stock_trend_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="20dp"
        android:text="@string/title_company_trend"
        android:textColor="@color/marketsense_text_black"
        android:textSize="18sp"
        android:fontFamily="Roboto-Regular"
        android:textStyle="normal"
        android:lineSpacingExtra="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/marketsense_stock_trend_iv"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/marketsense_stock_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="20dp"
        android:text="@string/title_company_name"
        android:textColor="@color/marketsense_text_black"
        android:textSize="18sp"
        android:fontFamily="Roboto-Regular"
        android:textStyle="normal"
        android:lineSpacingExtra="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/marketsense_stock_trend_tv"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/marketsense_stock_code_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="65dp"
        android:layout_marginBottom="20dp"
        android:text="@string/title_company_code"
        android:textColor="@color/marketsense_text_gray"
        android:textSize="16sp"
        android:fontFamily="Roboto-Regular"
        android:textStyle="normal"
        android:lineSpacingExtra="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@id/marketsense_stock_name_tv"
        app:layout_constraintBottom_toBottomOf="parent" />

    <ProgressBar
        android:id="@+id/marketsense_stock_confidence_progressbar"
        android:layout_width="40dp"
        android:layout_height="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        style="?android:attr/progressBarStyleHorizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/marketsense_stock_code_tv"
        app:layout_constraintEnd_toStartOf="@id/marketsense_stock_confidence_tv"
        app:layout_constraintBottom_toBottomOf="parent" />


    <TextView
        android:id="@+id/marketsense_stock_confidence_tv"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="20dp"
        android:text="@string/title_company_confidence"
        android:textColor="@color/marketsense_text_red"
        android:textSize="16sp"
        android:fontFamily="Roboto-Regular"
        android:textStyle="normal"
        android:lineSpacingExtra="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</android.support.constraint.ConstraintLayout>