<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="56dp" >

    <EditText
        android:id="@+id/search_text"
        android:layout_height="36dp"
        android:layout_width="0dp"
        android:background="@drawable/btn_oval_small_corner"
        android:imeOptions="actionDone"
        android:singleLine="true"
        android:inputType="text"
        android:hint="@string/title_search_hint_stock"
        android:textColorHint="@color/marketsense_text_gray"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:drawableStart="@drawable/ic_search_gray_24px"
        android:drawablePadding="2dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textSize="14sp"
        android:letterSpacing="0.04"
        android:fontFamily="sans-serif"
        android:textStyle="normal"
        android:textColor="@color/text_black"
        android:focusable="true"
        android:focusableInTouchMode="true"
        app:layout_constraintEnd_toStartOf="@id/cancel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <ImageButton
        android:id="@+id/search_cancel"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_clear_gray_24px"
        android:background="@null"
        android:visibility="gone"
        android:layout_marginEnd="6dp"
        android:contentDescription="@string/title_search_cancel"
        app:layout_constraintEnd_toEndOf="@id/search_text"
        app:layout_constraintTop_toTopOf="@id/search_text"
        app:layout_constraintBottom_toBottomOf="@id/search_text"
        />

    <TextView
        android:id="@+id/cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:textSize="16sp"
        android:fontFamily="Roboto-Regular"
        android:textStyle="normal"
        android:textColor="@color/text_white"
        android:gravity=""
        android:text="@string/title_search_cancel"
        app:layout_constraintStart_toEndOf="@id/search_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</android.support.constraint.ConstraintLayout>