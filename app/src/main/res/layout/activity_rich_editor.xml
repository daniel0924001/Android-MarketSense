    <TextView
        android:id="@+id/edit_tag_stock"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:background="@color/text_light_gray"
        android:textSize="14sp"
        android:fontFamily="sans-serif"
        android:textStyle="normal"
        android:text="@string/tag_stock_code"
        android:textColor="@color/text_black"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/rich_editor"
        />

    <jp.wasabeef.richeditor.RichEditor
        android:id="@+id/rich_editor"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edit_tag_stock"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/comment_news_block"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:background="@color/card_gray_background"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rich_editor"
        app:layout_constraintBottom_toBottomOf="parent" >

        <TextView
            android:id="@+id/comment_news_title_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:maxLines="2"
            android:ellipsize="end"
            android:textColor="@color/marketsense_text_black"
            android:textSize="14sp"
            android:fontFamily="sans-serif"
            android:text="@string/title_news_title"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/comment_news_fire_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorTrendUp"
            android:textSize="12sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            android:text="@string/title_news_good"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@id/comment_news_fire_iv"
            app:layout_constraintTop_toTopOf="@id/comment_news_fire_iv" />

        <ImageView
            android:id="@+id/comment_news_fire_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/iv_alarm"
            app:srcCompat="@mipmap/ic_fire_red3"
            android:layout_marginBottom="16dp"
            app:layout_constraintTop_toBottomOf="@id/comment_news_title_tv"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/comment_news_title_tv" />

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>