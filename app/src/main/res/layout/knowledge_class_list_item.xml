<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="72dp"
    android:layout_height="100dp"
    android:background="@color/white">

    <ImageView
        android:id="@+id/knowledge_class_icon"
        android:layout_height="48dp"
        android:layout_width="48dp"
        android:contentDescription="@string/knowledge_class_icon"
        app:srcCompat="@mipmap/ic_know_newbie"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/knowledge_class_title"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="2dp"
        android:textSize="14sp"
        android:text="@string/knowledge_class_newbie"
        android:textColor="@color/text_first"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/knowledge_class_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/knowledge_present"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/red_dot"
        android:contentDescription="@string/knowledge_class_icon"
        android:layout_marginTop="6dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/knowledge_class_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</android.support.constraint.ConstraintLayout>