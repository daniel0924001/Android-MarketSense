<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="92dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/date_block_prediction_title"
        android:layout_width="wrap_content"
        android:layout_height="17dp"
        android:textSize="12sp"
        android:text="@string/title_month_day_close_predict"
        android:fontFamily="sans-serif"
        android:textColor="@color/text_second"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/date_block_prediction_diff"
        android:layout_width="92dp"
        android:layout_height="40dp"
        android:background="@drawable/block_predict_up_background"
        android:textSize="18sp"
        android:text="@string/title_company_price_diff_percentage"
        android:fontFamily="sans-serif"
        android:textStyle="normal"
        android:textColor="@color/white"
        android:layout_marginTop="7dp"
        android:gravity="center"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/date_block_prediction_title"/>

</android.support.constraint.ConstraintLayout>