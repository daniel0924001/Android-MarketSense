<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/title_description"
        android:layout_width="0dp"
        android:layout_height="42dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/sorted_by_name"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:drawableEnd="@mipmap/ic_sorting_off"
            android:drawablePadding="4dp"
            android:textSize="14sp"
            android:textColor="@color/text_gray"
            android:text="@string/title_company_predict_name"
            android:gravity="center_vertical"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <android.support.constraint.Guideline
            android:id="@+id/guideline_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.3" />

        <TextView
            android:id="@+id/sorted_by_price"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:drawableEnd="@mipmap/ic_sorting_off"
            android:drawablePadding="4dp"
            android:textSize="14sp"
            android:textColor="@color/text_gray"
            android:text="@string/title_company_predict_price"
            android:gravity="center_vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/guideline_price" />

        <android.support.constraint.Guideline
            android:id="@+id/guideline_diff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

        <TextView
            android:id="@+id/sorted_by_diff"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:drawableEnd="@mipmap/ic_sorting_off"
            android:drawablePadding="4dp"
            android:textSize="14sp"
            android:textColor="@color/text_gray"
            android:text="@string/title_company_predict_fluctuation"
            android:gravity="center_vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/guideline_diff" />

        <android.support.constraint.Guideline
            android:id="@+id/guideline_plot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.65"/>

        <TextView
            android:id="@+id/sorted_by_people"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:drawableEnd="@mipmap/ic_sorting_off"
            android:drawablePadding="4dp"
            android:textSize="14sp"
            android:textColor="@color/text_gray"
            android:text="@string/title_company_predict_people_title"
            android:gravity="center_vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/guideline_plot"
            app:layout_constraintEnd_toStartOf="@id/sorted_by_news"/>

        <TextView
            android:id="@+id/sorted_by_news"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:drawableEnd="@mipmap/ic_sorting_off"
            android:drawablePadding="4dp"
            android:textSize="14sp"
            android:textColor="@color/text_gray"
            android:gravity="center_vertical"
            android:text="@string/title_company_predict_news_title"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/sorted_by_people"
            app:layout_constraintEnd_toEndOf="parent"/>

    </android.support.constraint.ConstraintLayout>

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipe_to_refresh"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/stock_recycler_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:padding="0dp"
            app:layout_constraintTop_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </android.support.v4.widget.SwipeRefreshLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/no_data_block"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone">

        <ImageView
            android:id="@+id/no_stock_iv"
            android:layout_height="160dp"
            android:layout_width="160dp"
            android:contentDescription="@string/no_notification"
            app:srcCompat="@drawable/baseline_sentiment_dissatisfied_24px"
            android:layout_marginBottom="80dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/no_stock_tv"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginTop="20dp"
            android:textSize="28sp"
            android:text="@string/ops_something_wrong"
            android:textColor="@color/marketsense_text_light_gray"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/no_stock_iv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </android.support.constraint.ConstraintLayout>

    <ProgressBar
        android:id="@+id/loading_progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>