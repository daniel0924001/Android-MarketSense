<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/body_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:descendantFocusability="blocksDescendants"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tv_people_ranking"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:maxLines="1"
                android:textColor="@color/text_gray"
                android:textSize="12sp"
                android:fontFamily="Roboto-Regular"
                android:text="@string/main_page_people_ranking"
                android:background="@color/text_light_gray"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <ProgressBar
                android:id="@+id/loading_progress_bar_rank_people"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:indeterminate="true"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/tv_people_ranking"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <com.idroi.marketsense.WrapGridView
                android:id="@+id/grid_ranking_people"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:numColumns="3"
                app:layout_constraintTop_toBottomOf="@id/tv_people_ranking"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/tv_news_ranking"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:maxLines="1"
                android:textColor="@color/text_gray"
                android:textSize="12sp"
                android:fontFamily="Roboto-Regular"
                android:text="@string/main_page_news_ranking"
                android:background="@color/text_light_gray"
                app:layout_constraintTop_toBottomOf="@id/loading_progress_bar_rank_people"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <ProgressBar
                android:id="@+id/loading_progress_bar_rank_news"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:indeterminate="true"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/tv_news_ranking"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <com.idroi.marketsense.WrapGridView
                android:id="@+id/grid_ranking_news"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:numColumns="3"
                app:layout_constraintTop_toBottomOf="@id/tv_news_ranking"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/tv_news"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:maxLines="1"
                android:textColor="@color/text_gray"
                android:textSize="12sp"
                android:fontFamily="Roboto-Regular"
                android:text="@string/main_page_news"
                android:background="@color/text_light_gray"
                app:layout_constraintTop_toBottomOf="@id/loading_progress_bar_rank_news"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/news_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="0dp"
                app:layout_constraintTop_toBottomOf="@id/tv_news"/>

            <android.support.constraint.ConstraintLayout
                android:id="@+id/no_data_block"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                app:layout_constraintTop_toBottomOf="@id/tv_news"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/no_news_iv"
                    android:layout_height="160dp"
                    android:layout_width="160dp"
                    android:contentDescription="@string/no_notification"
                    app:srcCompat="@drawable/baseline_sentiment_dissatisfied_24px"
                    android:layout_marginBottom="80dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent" />

                <TextView
                    android:id="@+id/no_news_tv"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="20dp"
                    android:textSize="28sp"
                    android:text="@string/ops_something_wrong"
                    android:textColor="@color/marketsense_text_light_gray"
                    android:gravity="center"
                    app:layout_constraintTop_toBottomOf="@id/no_news_iv"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent" />

            </android.support.constraint.ConstraintLayout>

            <ProgressBar
                android:id="@+id/loading_progress_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:indeterminate="true"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/tv_news"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </android.support.constraint.ConstraintLayout>

    </android.support.v4.widget.NestedScrollView>

</android.support.constraint.ConstraintLayout>