<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="1dp"
    android:id="@+id/marketsense_news_item_id"
    android:layout_width="match_parent"
    android:layout_height="123dp"
    android:background="@drawable/news_layout_border">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/marketsense_news_image_iv"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:adjustViewBounds="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="15dp"
        fresco:actualImageScaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/marketsense_news_title_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:maxLines="2"
        android:ellipsize="end"
        android:textColor="@color/marketsense_text_black"
        android:textSize="16sp"
        android:fontFamily="Roboto-Regular"
        android:textStyle="bold"
        android:lineSpacingExtra="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/marketsense_news_image_iv" />

    <TextView
        android:id="@+id/marketsense_news_date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="20dp"
        android:textColor="@color/marketsense_text_gray"
        android:textSize="14sp"
        android:paddingLeft="5dp"
        android:paddingStart="5dp"
        android:paddingRight="5dp"
        android:paddingEnd="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:id="@+id/marketsense_news_alarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="15dp"
        android:visibility="gone"
        android:contentDescription="@string/iv_alarm"
        app:srcCompat="@drawable/ic_notifications_red_24px"
        app:layout_constraintStart_toEndOf="@id/marketsense_news_date_tv"
        app:layout_constraintBottom_toBottomOf="parent" />

</android.support.constraint.ConstraintLayout>