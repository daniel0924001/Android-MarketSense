<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="269dp"
    android:layout_height="210dp"
    android:layout_gravity="center"
    android:background="#FFF"
    >

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/login_page_text_title"
        android:text="@string/login_page_title"
        android:textSize="18sp"
        android:fontFamily="Roboto-Regular"
        android:textStyle="bold"
        android:textColor="@color/marketsense_text_black"
        android:layout_marginTop="33dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/login_page_text_subtitle"
        android:text="@string/login_page_subtitle"
        android:textSize="14sp"
        android:fontFamily="Roboto-Regular"
        android:textStyle="normal"
        android:textColor="@color/marketsense_text_black"
        android:layout_marginTop="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/login_page_text_title"
        />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Fblogin_button"
        android:background="@drawable/login_background"
        android:contentDescription="@string/login_facebook"
        android:src="@mipmap/facebook"
        android:layout_marginStart="57dp"
        android:layout_marginTop="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_page_text_subtitle"
        />

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/login_fb_text"
        android:text="@string/login_facebook"
        android:textSize="12sp"
        android:fontFamily="sans-serif"
        android:textColor="@color/marketsense_text_gray"
        android:layout_marginTop="7dp"
        app:layout_constraintTop_toBottomOf="@+id/Fblogin_button"
        app:layout_constraintLeft_toLeftOf="@+id/Fblogin_button"
        app:layout_constraintRight_toRightOf="@+id/Fblogin_button"
        />


    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Gsign_in_button"
        android:src="@mipmap/google"
        android:background="@drawable/login_background"
        android:contentDescription="@string/login_google"
        android:layout_marginEnd="58dp"
        android:layout_marginTop="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_page_text_subtitle"
        />

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/login_google_text"
        android:text="@string/login_google"
        android:textSize="12sp"
        android:fontFamily="sans-serif"
        android:textColor="@color/marketsense_text_gray"
        android:layout_marginTop="7dp"
        app:layout_constraintTop_toBottomOf="@+id/Gsign_in_button"
        app:layout_constraintLeft_toLeftOf="@+id/Gsign_in_button"
        app:layout_constraintRight_toRightOf="@+id/Gsign_in_button"
        />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Gsign_out_button"
        android:src="@mipmap/google"
        android:background="@drawable/login_background"
        android:contentDescription="@string/login_facebook"
        android:layout_marginTop="18dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_page_text_subtitle"
        android:visibility="gone"
        />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Fblogout_button"
        android:src="@mipmap/facebook"
        android:background="@drawable/login_background"
        android:contentDescription="@string/login_google"
        android:layout_marginTop="18dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_page_text_subtitle"
        android:visibility="gone"
        />

</android.support.constraint.ConstraintLayout>