<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/info_foundation"
        android:layout_width="48dp"
        android:layout_height="18dp"
        android:background="@drawable/block_gray_border_with_radius_corner"
        android:textSize="12sp"
        android:text="@string/info_foundation"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/text_second"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/info_tech"
        android:layout_width="48dp"
        android:layout_height="18dp"
        android:background="@drawable/block_gray_border_with_radius_corner"
        android:textSize="12sp"
        android:text="@string/info_tech"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/text_second"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/info_foundation"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/info_news"
        android:layout_width="48dp"
        android:layout_height="18dp"
        android:background="@drawable/block_gray_border_with_radius_corner"
        android:textSize="12sp"
        android:text="@string/info_news"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/text_second"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/info_tech"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/info_short"
        android:layout_width="48dp"
        android:layout_height="18dp"
        android:background="@drawable/block_gray_border_with_radius_corner"
        android:textSize="12sp"
        android:text="@string/info_short"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/text_second"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/info_foundation" />

    <TextView
        android:id="@+id/info_middle"
        android:layout_width="48dp"
        android:layout_height="18dp"
        android:background="@drawable/block_gray_border_with_radius_corner"
        android:textSize="12sp"
        android:text="@string/info_middle"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/text_second"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/info_foundation"
        app:layout_constraintStart_toStartOf="@id/info_short" />

    <TextView
        android:id="@+id/info_long"
        android:layout_width="48dp"
        android:layout_height="18dp"
        android:background="@drawable/block_gray_border_with_radius_corner"
        android:textSize="12sp"
        android:text="@string/info_long"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/text_second"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/info_tech"
        app:layout_constraintStart_toStartOf="@id/info_short" />

    <ImageView
        android:id="@+id/info_foundation_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_trend_up_s"
        android:contentDescription="@string/title_company_predict_fluctuation"
        android:layout_marginStart="5dp"
        app:layout_constraintTop_toTopOf="@id/info_foundation"
        app:layout_constraintBottom_toBottomOf="@id/info_foundation"
        app:layout_constraintStart_toEndOf="@id/info_foundation"/>

    <ImageView
        android:id="@+id/info_tech_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_trend_up_s"
        android:contentDescription="@string/title_company_predict_fluctuation"
        android:layout_marginStart="5dp"
        app:layout_constraintTop_toTopOf="@id/info_tech"
        app:layout_constraintBottom_toBottomOf="@id/info_tech"
        app:layout_constraintStart_toEndOf="@id/info_tech"/>

    <ImageView
        android:id="@+id/info_news_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_trend_down_s"
        android:contentDescription="@string/title_company_predict_fluctuation"
        android:layout_marginStart="5dp"
        app:layout_constraintTop_toTopOf="@id/info_news"
        app:layout_constraintBottom_toBottomOf="@id/info_news"
        app:layout_constraintStart_toEndOf="@id/info_news"/>

    <ImageView
        android:id="@+id/info_short_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_trend_up_s"
        android:contentDescription="@string/title_company_predict_fluctuation"
        android:layout_marginStart="5dp"
        app:layout_constraintTop_toTopOf="@id/info_short"
        app:layout_constraintBottom_toBottomOf="@id/info_short"
        app:layout_constraintStart_toEndOf="@id/info_short"/>

    <ImageView
        android:id="@+id/info_middle_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_trend_up_s"
        android:contentDescription="@string/title_company_predict_fluctuation"
        android:layout_marginStart="5dp"
        app:layout_constraintTop_toTopOf="@id/info_middle"
        app:layout_constraintBottom_toBottomOf="@id/info_middle"
        app:layout_constraintStart_toEndOf="@id/info_middle"/>

    <ImageView
        android:id="@+id/info_long_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_trend_down_s"
        android:contentDescription="@string/title_company_predict_fluctuation"
        android:layout_marginStart="5dp"
        app:layout_constraintTop_toTopOf="@id/info_long"
        app:layout_constraintBottom_toBottomOf="@id/info_long"
        app:layout_constraintStart_toEndOf="@id/info_long"/>

</android.support.constraint.ConstraintLayout>